  <div class='row'>
    <div class="small-12 columns">
      <h3><%= @bet.title %></h3>
      <div class= "panel">
        <% if !@bet.accepted? && !@bet.declined? %>
          <h5>**Bet is Pending Approval**</h5>
        <% elsif @bet.accepted? %>
          <h5>**Bet is Accepted**</h5>
        <% else %>
          <h5>**Bet is Declined**</h5>
        <% end %>

        <h4>This bet was issued by <%= @bet.sender.username %> to <%= @bet.receiver.username %></h4>
          <p>Terms of Bet: <%= @bet.body %></p>
          <p>Wager Type: <%= @bet.wager.name %></p>

        <% if !@bet.date.nil? %>
          <p>Date: <%= @bet.date %>
        <% end %>
      </div>
    </div>
  </div>


  <div class='row'>
    <% if !@bet.accepted? && !@bet.declined? && current_user == @bet.receiver %>
    <div class='large-6 columns'>
      <%= link_to "Accept", accept_bet_path(@bet), method: :patch, class: "button radius success" %>
    </div>
    <div class='large-6 columns'>
      <%= link_to "Decline", decline_bet_path(@bet), method: :patch, class: "button round alert" %>
    </div>
    <% end %>
  </div>
