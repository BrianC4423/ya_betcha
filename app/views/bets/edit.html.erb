<div class='row'>
  <div class="pending">
    <% if !@bet.accepted? %>
    <h5>**Bet is Pending Approval**</h5>
    <% end %>
  </div>
</div>

<div class='row'>
  <div class="large-3 columns"></div>
    <div class="large-6 columns", id="show-page-header"><h3><%= @bet.title %></h3></div>
  <div class="large-3 columns"></div>
</div>


<div class='row'>
  <div class='large-6 columns'>
    <%= link_to "Accept", bet_path(@bet), method: :patch %>
  </div>
  <div class='large-6 columns'>
    <%= link_to "Decline", edit_bet_path %>  </div>
</div>
